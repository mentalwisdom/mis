@model IEnumerable<MIS.Models.Product>

@{ int count =0;}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-arrow">
        <li class="breadcrumb-item active" aria-current="page">Product</li>
    </ol>
</nav>
<hr>    
<a asp-action="Create" class="btn button btn-outline-success">
    <i class="fa fa-plus"></i>
        Create
</a>
<br>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                
                product name
            </th>
            <th>
                
                qty
            </th>
            <th>
                
                price
            </th>
            <th>
                productGroup
            </th>
            <th>
                
                pic
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.product_name
            </td>
            <td>
                @item.qty
            </td>
            <td>
                @item.price
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productGroup.product_group_id)
            </td>
            <td>
                @item.pic
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.product_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.product_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.product_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
