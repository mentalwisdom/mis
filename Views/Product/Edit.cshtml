@model MIS.Models.Product
<nav aria-label="breadcrumb">
  <ol class="breadcrumb breadcrumb-arrow">
     <li class="breadcrumb-item"><a href="/product/index">product</a></li>
    <li class="breadcrumb-item active" aria-current="page">edit</li>
  </ol>
</nav>
<hr/>
<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="product_id" />
            <div class="form-group">
                <label  class="control-label">product name</label>
                <input asp-for="product_name" class="form-control" />
                <span asp-validation-for="product_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">qty</label>
                <input asp-for="qty" class="form-control" />
                <span asp-validation-for="qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">price</label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">product group id</label>
                <select asp-for="product_group_id" class="form-control" asp-items="ViewBag.product_group_id"></select>
                <span asp-validation-for="product_group_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">pic</label>
                <input asp-for="pic" class="form-control" />
                <span asp-validation-for="pic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default btn-outline-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

